  "puzzles": [],
  "general_events": [
    {
      "name": "eventA",
      "rules": [
        {
          "id": "mainSwitch flipped",
          "description": "Als de mainSwitch true is, gebeurd er nix",
          "limit": 1,
          "conditions": {
            "operator": "OR",
            "list": [
              {
                "type": "device",
                "type_id": "controlBoard",
                "constraints": {
                  "operator": "AND",
                  "list": [
                    {
                      "component_id": "mainSwitch",
                      "comparison": "eq",
                      "value": true
                    }
                  ]
                }
              }
            ]
          },
          "actions": []
        }
      ]
    },
    {
      "name": "eventB",
      "rules": [
        {
          "id": "",
          "description": "Als rule 'mainSwitch flipped' is gedaan, dan moet greenLight1 aangaan",
          "limit": 1,
          "conditions": {
            "operator": "OR",
            "list": [
              {
                "type": "rule",
                "type_id": "mainSwitch flipped",
                "constraints": {
                  "operator": "AND",
                  "list": [
                    {
                      "comparison": "gte",
                      "value": 1
                    }
                  ]
                }
              }
            ]
          },
          "actions": [
            {
              "type": "device",
              "type_id": "controlBoard",
              "message": [
                {
                  "component_id": "greenLight1",
                  "instruction": "turnOnOff",
                  "value": true
                }
              ]
            }
          ]
        }
      ]
    }
  ]
